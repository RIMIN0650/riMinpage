<?xml version="1.0" encoding="UTF-8"?>

  <!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.rimin.riMinpage.user.repository.UserRepository">
  	
  	<insert id="insertUser" parameterType="map">
  		INSERT INTO
  			`rimin_user`
  		(
  			`loginId`
  			, `password`
  			, `name`
  			, `email`
  		)
  		VALUE
  		(
  			#{loginId}
  			, #{password}
  			, #{name}
  			, #{email}
  		)
  	
  	</insert>
  
  
  	<!-- 사용자 ID 중복 여부 확인 -->
  		<select id="checkDupId" parameterType="string" resultType="int">
  			SELECT
  				count(*)
  			FROM
  				`rimin_user`
  			WHERE 
  				`loginId` = #{loginId}
  		
  		</select>
  
  	
  
  
  </mapper>